  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_module/@types", "./src/types"],
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
